<?xml version="1.0" encoding="utf-8"?>
<animate.zero.com.animaterepository.circle_wave.WaveViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/start_animate"/>

    <animate.zero.com.animaterepository.circle_wave.CircleWaveView
        android:id="@+id/wave_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        wave:waterColor="@color/colorAccent"
        wave:circleRadius="@dimen/wave_circle_radius"
        wave:waveSwing="0.3" />

</animate.zero.com.animaterepository.circle_wave.WaveViewLayout>